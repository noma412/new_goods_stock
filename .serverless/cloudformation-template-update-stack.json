    "StockLambdaVersionGX4kMFR5mqSaYWb8Vb1Fvw5YR8ryFFHMcLfZJSaA": {
      "Type": "AWS::Lambda::Version",
      "DeletionPolicy": "Retain",
      "Properties": {
